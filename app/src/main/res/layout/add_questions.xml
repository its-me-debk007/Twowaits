<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CreateAQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Add Questions"
            android:textColor="#000000"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/reem_kufi"
            android:text="Question"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreateAQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TitleOfQuiz"
            style="@style/textInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Question"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/QuestionForQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reem_kufi"
                android:gravity="top"
                android:hint="Enter the question"
                android:inputType="text"
                android:maxLines="3"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/OptionsForQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reem_kufi"
            android:text="Options"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleOfQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/OptionsForQuestions"
            style="@style/textInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:passwordToggleEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OptionsForQuiz">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@id/Option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reem_kufi"
                android:hint="Enter the option"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="13dp"
                android:paddingEnd="135dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="-4dp"
            android:drawableEnd="@drawable/enlarged_plus_icon"
            android:text="Add"
            android:textSize="16sp"
            app:cornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/OptionsForQuestions"
            app:layout_constraintEnd_toEndOf="@+id/OptionsForQuestions"
            app:layout_constraintTop_toTopOf="@+id/OptionsForQuestions" />

        <TextView
            android:id="@+id/Option1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:fontFamily="@font/reem_kufi"
            android:text="sdjgsdighsdgsdgsdu fsdfdifhsdfgdsfusdgfsufgsfusdgfsufd"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OptionsForQuestions" />

        <TextView
            android:id="@+id/Option2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/reem_kufi"
            android:maxLines="1"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:visibility="gone"
            android:text="ifhsdifhfiafife faifhidfhdifhfihiefhefdfddfffdfdfwef"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option1" />

        <TextView
            android:id="@+id/Option3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/reem_kufi"
            android:maxLines="1"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option2" />

        <TextView
            android:id="@+id/Option4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/reem_kufi"
            android:maxLines="1"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:text="fndiafhfuahffgfagffg hfdfgofgeofgweugfdsufifgdsufgsd"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option3" />

        <TextView
            android:id="@+id/Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/reem_kufi"
            android:text="Answer"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option4" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CorrectAnswer"
            style="@style/dropdownStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Answer">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/reem_kufi"
                android:hint="Enter the correct answer of question"
                android:inputType="none"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/CreateAndAddQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:text="Create &amp; add questions"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CorrectAnswer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>