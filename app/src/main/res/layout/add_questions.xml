<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CreateAQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Add Questions"
            android:textColor="#000000"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/reemkufi_regular"
            android:text="Question"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreateAQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TitleOfQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Question">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/QuestionForQuiz"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/login_border"
                android:fontFamily="@font/reemkufi_regular"
                android:hint="Enter the question"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/OptionsForQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reemkufi_regular"
            android:text="Options"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleOfQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/OptionsForQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OptionsForQuiz">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@id/Option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_border"
                android:fontFamily="@font/reemkufi_regular"
                android:hint="Enter the options for questions"
                android:lines="1"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddBtn"
            android:layout_width="wrap_content"
            android:layout_height="63.5dp"
            android:layout_marginTop="31dp"
            android:backgroundTint="#804D37"
            android:drawableEnd="@drawable/enlarged_plus_icon"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@+id/OptionsForQuestions"
            app:layout_constraintTop_toTopOf="@+id/OptionsForQuiz" />

        <TextView
            android:id="@+id/Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reemkufi_regular"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OptionsForQuestions" />

        <TextView
            android:id="@+id/Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/reemkufi_regular"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option1" />

        <TextView
            android:id="@+id/Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/reemkufi_regular"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option2" />

        <TextView
            android:id="@+id/Option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/reemkufi_regular"
            android:textColor="#6B3B25"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option3" />

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/OptionsRecyclerView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/OptionsForQuestions" />-->

        <TextView
            android:id="@+id/Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/reemkufi_regular"
            android:text="Answer"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option4" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CorrectAnswer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Answer">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_border"
                android:fontFamily="@font/reemkufi_regular"
                android:hint="Enter the correct answer of question"
                android:inputType="none"
                android:lines="1"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/CreateAndAddQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#804D37"
            android:fontFamily="@font/roboto_medium"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:text="Create &amp; add questions"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CorrectAnswer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>