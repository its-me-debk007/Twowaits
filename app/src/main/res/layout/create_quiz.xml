<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CreateAQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Create A Quiz"
            android:textColor="#000000"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/SubHeading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/reemkufi_regular"
            android:text="Title"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreateAQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TitleOfQuiz"
            style="@style/textInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading1"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reemkufi_regular"
                android:hint="Enter the title of quiz"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SubHeading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reemkufi_regular"
            android:text="No. of questions"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleOfQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/NoOfQuestionsOfQuiz"
            style="@style/textInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading2"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/noOfQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="2dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/reemkufi_regular"
                android:gravity="center"
                android:hint="Quantity"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/SubHeading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reemkufi_regular"
            android:text="Duration (in minutes)"
            android:textColor="#804D37"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NoOfQuestionsOfQuiz" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DurationOfQuiz"
            style="@style/textInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading3"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="2dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/reemkufi_regular"
                android:gravity="center"
                android:hint="Duration"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:textColor="#B89A8D"
                android:textColorHint="#B89A8D"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/SubtractDuration"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#804D37"
            android:src="@drawable/ic_minus"
            app:layout_constraintBottom_toBottomOf="@+id/DurationOfQuiz"
            app:layout_constraintStart_toStartOf="@+id/DurationOfQuiz"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading3" />

        <ImageButton
            android:id="@+id/AddDuration"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#804D37"
            android:src="@drawable/ic_plus_white"
            app:layout_constraintBottom_toBottomOf="@+id/DurationOfQuiz"
            app:layout_constraintEnd_toEndOf="@+id/DurationOfQuiz"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading3" />

        <Button
            android:id="@+id/CreateAndAddQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#804D37"
            android:fontFamily="@font/roboto_medium"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:text="Create &amp; add questions"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DurationOfQuiz" />

        <ImageButton
            android:id="@+id/AddNoOfQuestions"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#804D37"
            android:src="@drawable/ic_plus_white"
            app:layout_constraintBottom_toTopOf="@+id/SubHeading3"
            app:layout_constraintEnd_toEndOf="@+id/NoOfQuestionsOfQuiz"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading2" />

        <ImageButton
            android:id="@+id/SubtractNoOfQuestions"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#804D37"
            android:src="@drawable/ic_minus"
            app:layout_constraintBottom_toTopOf="@+id/SubHeading3"
            app:layout_constraintStart_toStartOf="@+id/NoOfQuestionsOfQuiz"
            app:layout_constraintTop_toBottomOf="@+id/SubHeading2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>