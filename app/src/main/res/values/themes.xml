<resources>
    <!-- Base application theme. -->
    <style name="Theme.Twowaits" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B49385</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_brown</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/twoWaitsThemeColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorSurfaceVariant">@color/white</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_brown</item>
        <item name="hintEnabled">false</item>
        <item name="passwordToggleTint">@color/light_brown</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="dropdownStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/light_brown</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">@color/light_brown</item>
    </style>

    <style name="customProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="trackCornerRadius">8dp</item>
    </style>

    <style name="CurvedImage50Percent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CurvedImage10Percent">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/light_brown</item>
        <item name="android:fontFamily">@font/reem_kufi</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>