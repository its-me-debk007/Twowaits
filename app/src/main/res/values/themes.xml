<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Twowaits" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B49385</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/twoWaitsThemeColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item  name="android:windowActivityTransitions">true</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_brown</item>
        <item name="hintEnabled">false</item>
        <item name="passwordToggleTint">@color/light_brown</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="helperTextTextColor">#FF0000</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="dropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/light_brown</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">@color/light_brown</item>
    </style>
</resources>